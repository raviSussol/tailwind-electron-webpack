{
  "name": "tailwind-electron-webpack",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "clean": "del-cli dist",
    "compile:main": "webpack --env main --color",
    "compile:preload": "webpack --env preload --color",
    "compile:renderer": "webpack --color",
    "compile": "yarn clean && npm-run-all -p compile:*",
    "dev": "cross-env NODE_ENV=development && yarn compile && electron dist/main",
    "build": "cross-env NODE_ENV=production && yarn compile && electron-builder build"
  },
  "repository": "https://github.com/raviSussol/tailwind-electron-webpack.git",
  "author": "Ravi Shrestha <ravi.shrestha@sussol.net>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "autoprefixer": "^10.3.1",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "del-cli": "^3.0.1",
    "electron": "^12.0.7",
    "electron-builder": "^22.11.3",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^6.1.1",
    "tailwindcss": "^2.2.7",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0"
  },
  "build": {
    "productName": "TEW",
    "appId": "com.tew.app",
    "extraMetadata": {
      "main": "dist/main"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "copyright": "Copyright Â© 2021",
    "mac": {
      "category": "private.app-category.productivity",
      "target": "dmg"
    },
    "dmg": {
      "contents": [
        {
          "x": 152,
          "y": 201
        },
        {
          "x": 445,
          "y": 201,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "iconSize": 110,
      "iconTextSize": 13
    },
    "compression": "normal",
    "asar": true
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
